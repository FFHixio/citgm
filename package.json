{
  "name": "citgm",
  "version": "7.0.0",
  "description": "The Canary in the Goldmine",
  "homepage": "http://nodejs.org",
  "main": "bin/citgm",
  "preferGlobal": true,
  "type": "module",
  "bin": {
    "citgm": "./bin/citgm.cjs",
    "citgm-all": "./bin/citgm-all.cjs"
  },
  "files": [
    "bin",
    "lib",
    "lib-cjs"
  ],
  "scripts": {
    "build": "rollup -c --preserveModules",
    "lint": "eslint bin/* lib/ test/ --cache",
    "tap": "tap --no-esm --no-coverage -J --timeout 480 \"test/**/test-*.js\"",
    "tap-coverage": "c8 --reporter lcov tap --no-esm --no-coverage -J --timeout 480 \"test/**/test-*.js\"",
    "test": "npm run lint && npm run tap"
  },
  "author": "James M Snell <jasnell@gmail.com> (http://jasnell.me)",
  "repository": {
    "type": "git",
    "url": "https://github.com/nodejs/citgm"
  },
  "bugs": {
    "url": "https://github.com/nodejs/citgm/issues",
    "email": "jasnell@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "async": "^3.2.0",
    "bl": "^4.0.2",
    "chalk": "^4.0.0",
    "columnify": "^1.5.4",
    "execa": "^4.0.0",
    "lodash": "^4.17.15",
    "make-promises-safe": "^5.1.0",
    "normalize-git-url": "^3.0.2",
    "npm-package-arg": "^8.0.1",
    "npm-which": "^3.0.1",
    "osenv": "^0.1.5",
    "read-package-json": "^2.1.1",
    "readable-stream": "^3.6.0",
    "request": "^2.88.2",
    "rimraf": "^3.0.2",
    "root-check": "^1.0.0",
    "semver": "^7.3.2",
    "strip-ansi": "^6.0.0",
    "supports-color": "^7.1.0",
    "supports-esm": "^1.0.0",
    "tar": "^6.0.2",
    "uid-number": "0.0.6",
    "uuid": "^8.0.0",
    "which": "^2.0.2",
    "winston": "^3.2.1",
    "xml-sanitizer": "^1.1.6",
    "xmlbuilder": "^15.1.1",
    "yargs": "^15.3.1",
    "yarn": "^1.22.4"
  },
  "devDependencies": {
    "ansi-regex": "^5.0.0",
    "babel-eslint": "^10.0.3",
    "c8": "^7.1.2",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "fs-extra": "^9.0.0",
    "prettier": "^2.0.5",
    "rollup": "^2.9.0",
    "rollup-plugin-copy": "^3.3.0",
    "string-to-stream": "^3.0.1",
    "tap": "^14.10.7",
    "tap-parser": "^10.0.1",
    "xml2js": "^0.4.23"
  },
  "prettier": {
    "proseWrap": "always",
    "singleQuote": true,
    "trailingComma": "none",
    "overrides": [
      {
        "files": "LICENSE.md",
        "options": {
          "proseWrap": "never"
        }
      }
    ]
  }
}
